rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthed() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthed() && request.auth.uid == uid;
    }

    function petMemberDoc(petId) {
      return get(/databases/$(database)/documents/pets/$(petId)/members/$(request.auth.uid));
    }

    function isPetMember(petId) {
      return isAuthed() && petMemberDoc(petId).exists();
    }

    function petRole(petId) {
      return isPetMember(petId) ? petMemberDoc(petId).data.role : null;
    }

    function canReadSharedPet(petId) {
      return isPetMember(petId);
    }

    function canWriteSharedPetData(petId) {
      return petRole(petId) in ['owner', 'family'];
    }

    function isSharedPetOwner(petId) {
      return petRole(petId) == 'owner';
    }

    match /users/{uid} {
      allow read, write: if isOwner(uid);

      match /pets/{petId} {
        allow read, write: if isOwner(uid);

        match /reminders/{reminderId} {
          allow read, write: if isOwner(uid);
        }

        match /weights/{entryId} {
          allow read, write: if isOwner(uid);
        }

        match /logs/{logId} {
          allow read, write: if isOwner(uid);
        }

        match /expenses/{expenseId} {
          allow read, write: if isOwner(uid);
        }

        match /events/{eventId} {
          allow read, write: if isOwner(uid);
        }

        match /documents/{documentId} {
          allow read, write: if isOwner(uid);
        }
      }

      match /deviceTokens/{tokenId} {
        allow read, write: if isOwner(uid);
      }
    }

    match /posts/{postId} {
      allow read: if isAuthed();
      allow create: if isAuthed();
      allow update: if isAuthed() && (
        resource.data.ownerUid == request.auth.uid ||
        request.resource.data.diff(resource.data).changedKeys().hasOnly(['likeCount', 'commentCount', 'updatedAt'])
      );
      allow delete: if isAuthed() && resource.data.ownerUid == request.auth.uid;

      match /likes/{uid} {
        allow read: if isAuthed();
        allow write: if isOwner(uid);
      }

      match /comments/{commentId} {
        allow read: if isAuthed();
        allow create: if isAuthed();
        allow update, delete: if isAuthed() && resource.data.uid == request.auth.uid;
      }
    }

    // Shared pets model (V2.1 draft)
    match /pets/{petId} {
      allow read: if canReadSharedPet(petId);
      allow create: if isAuthed();
      allow update: if canWriteSharedPetData(petId);
      allow delete: if isSharedPetOwner(petId);

      match /members/{memberUid} {
        allow read: if canReadSharedPet(petId);
        allow create: if isSharedPetOwner(petId) || (isAuthed() && request.auth.uid == memberUid);
        allow update: if isSharedPetOwner(petId);
        allow delete: if isSharedPetOwner(petId);
      }

      match /reminders/{reminderId} {
        allow read: if canReadSharedPet(petId);
        allow write: if canWriteSharedPetData(petId);
      }

      match /weights/{entryId} {
        allow read: if canReadSharedPet(petId);
        allow write: if canWriteSharedPetData(petId);
      }

      match /logs/{logId} {
        allow read: if canReadSharedPet(petId);
        allow write: if canWriteSharedPetData(petId);
      }

      match /expenses/{expenseId} {
        allow read: if canReadSharedPet(petId);
        allow write: if canWriteSharedPetData(petId);
      }

      match /events/{eventId} {
        allow read: if canReadSharedPet(petId);
        allow write: if canWriteSharedPetData(petId);
      }

      match /documents/{documentId} {
        allow read: if canReadSharedPet(petId);
        allow write: if canWriteSharedPetData(petId);
      }
    }

    match /petInvites/{inviteId} {
      allow read: if isAuthed();
      allow create: if isAuthed();
      allow update, delete: if isAuthed();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
